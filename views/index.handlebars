<div class="jumbotron">
  <h1 class="display-4 text-center">Burgers!</h1>
  <p class="lead text-center">Add or devour a delicious burger!</p>
</div>

<div class="container">
  <div class="row">
    <h3 class="col text-center">Burgers that have been made:</h3>
    <hr>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <h4 class="text-center mb-3">Not eaten yet</h4>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h4 class="text-center mb-3">Devoured!</h4>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

{{!-- make a new burger form --}}
  <div class="row">
    <form class="create-form">

      <div class="form-group">
        <label for="burgers">Burger Name:</label>
        <input type="text" id="burger" name="name" required="required">
      </div>

      <div class="form-group">
        <label for="burger">In what column would you like this burger to appear?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not eaten yet.
      </div>

      <button type="submit">Add burger</button>
    </form>
  </div>
</div>